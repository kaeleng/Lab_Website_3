<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <% 
				  var image_src = '../resources/img/helmet.jpg';
				  
				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/select_player" method="get">
						<select class="custom-select" action="/player_info" method="get" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id, 
							 			but will display the player's name-->

							 			<% data.forEach((item, index) => { %>
										
											<option value=<%= item.id %>><%= item.name %></option>
												
										<% }) %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
						<% 
							if (data) { 
								data.forEach((item, index)=>{ %>

									<td><%= item.year %></td> 
								
							
						</tr>
						<tr>
							<th>Major</th>
							<td><%= item.major%>	</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <%= item.passing_yards  %> </td>
							<td>Avg. Passing Yards: </td>
						</tr>
						<tr>
							<td>Rushing Yards: <%= item.rushing_yards %> </td>
							<td>Avg. Rushing Yards: </td>
						</tr>
						<tr>
							<td>Receiving Yards:  <%= item.receiving_yards %></td>
							<td>Avg. Receiving Yards: </td>
						</tr>
						<% }); %>
							  	  
						<% } %>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>